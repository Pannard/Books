<Page x:Class="Books.MVVM.Views.MesLivresPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Books.MVVM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MesLivresPage">

    <Grid>
        <DataGrid Name="AllMyBooks"  Grid.Row="1" Grid.RowSpan="2" AutoGenerateColumns="False" Grid.Column="0" Grid.ColumnSpan="2" ItemsSource="{Binding MesLivresBooks}" Margin="10 0 10 0" IsReadOnly="True" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Titre" Binding="{Binding Titre}" />
                <DataGridTextColumn Header="Auteur" Binding="{Binding Auteur}" />
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" />
                <DataGridTextColumn Header="Edition" Binding="{Binding Edition}" />
                <DataGridTemplateColumn Header="Information">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Infos" Click="InfosPage" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
