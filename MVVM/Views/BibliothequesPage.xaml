<Page x:Class="Books.MVVM.Views.BibliothequesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Books.MVVM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BibliothequesPage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>



        <Button Content="Mes Livres" Grid.RowSpan="3" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Height="50" Width="500"  Margin="10 0 10 200" Click="MesLivresClickPage"/>
        <Button Content="Lu" Grid.RowSpan="3" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Width="200" Height="50" Margin="10 0 300 0"  />
        <Button Content="A lire" Grid.RowSpan="3" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Height="50" Width="200"  Margin="300 0 10 0" />
        <Button Content="En cours" Grid.RowSpan="3" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Height="50" Width="200" Margin="10 150 300 0"  />
        <Button Content="Wishlist" Grid.RowSpan="3" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Height="50" Width="200" Margin="300 150 10 0" />




    </Grid>
</Page>
