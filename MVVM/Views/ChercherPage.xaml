<Page x:Class="Books.MVVM.Views.ChercherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Books.MVVM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChercherPage">
    
    <Grid>
        
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Button for adding a new book -->
        <Button Content="Ajouter" Grid.Row="0" Grid.Column="1" Height="20" Width="100" HorizontalAlignment="Right" Margin="0 0 10 0" Command="{Binding  OnClickSearch}"/>

        <!-- TextBox for book name search -->
        <TextBox Grid.Row="0"  Grid.Column="0" Grid.ColumnSpan="2" 
     
     Height="20" Width="350" HorizontalAlignment="Left" Margin="10 0 0 0"/>

        <!-- DataGrid displaying the books -->
        <DataGrid Name="AllBooks"  Grid.Row="1" Grid.RowSpan="2" AutoGenerateColumns="False" Grid.Column="0" Grid.ColumnSpan="2" ItemsSource="{Binding Books}" SelectedItem="{Binding SelectedBook, Mode=TwoWay}"   Margin="10 0 10 0" IsReadOnly="True"   >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Titre" Binding="{Binding Titre}" />
                <DataGridTextColumn Header="Auteur" Binding="{Binding Auteur}" />
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" />
                <DataGridTextColumn Header="Edition" Binding="{Binding Edition}" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
